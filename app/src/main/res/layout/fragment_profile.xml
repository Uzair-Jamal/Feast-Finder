<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/profiletextshape"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:text="Name"
                />
            <EditText
                android:id="@+id/profile_name_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:hint="Name"
                />
            

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/profiletextshape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_profile"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:text="Address"
                />
            <EditText
                android:id="@+id/address_profile_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:hint="Lorem ipsum is placeholder text
                                commonly used in the graphic"
                 />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/profiletextshape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:text="Email"
                />
            <EditText
                android:id="@+id/profile_email_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:hint="example@gmail.com"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/profiletextshape"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:text="Phone"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:hint="3434343900"
                />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@drawable/proceed_btn"
        android:text="Save Information"
        android:elevation="5dp"
        android:textColor="@color/app_color"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />
</FrameLayout>