<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageButton
        android:id="@+id/details_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Food Name"
        android:textColor="@color/app_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_back_btn" />

    <ImageView
        android:id="@+id/details_food_img"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/menu1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_food_name" />

    <TextView
        android:id="@+id/short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="Short description"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_food_img" />

    <TextView
        android:id="@+id/details_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingEnd="16dp"
        android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit,sed do eiusmod tempor incididunt ut bore et dolore magna aliqua. Ut enim ad"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/short_description"
        app:layout_constraintTop_toBottomOf="@+id/short_description"
        />

    <TextView
        android:id="@+id/details_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/details_description_text"
        app:layout_constraintTop_toBottomOf="@id/details_description_text"
        />

    <TextView
        android:id="@+id/details_ingredients_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1st item\n2nd item\n3rd item"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/details_ingredients"
        app:layout_constraintTop_toBottomOf="@+id/details_ingredients"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/details_cart_btn"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:text="Add To Cart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/gohomeshape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_ingredients_text" />
</androidx.constraintlayout.widget.ConstraintLayout>